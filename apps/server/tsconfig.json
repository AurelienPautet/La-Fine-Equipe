{
  "compilerOptions": {
    "target": "ES2020",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@lafineequipe/db": ["../../packages/db/src"],
      "@lafineequipe/db/*": ["../../packages/db/src/*"]
    }
  },
  "include": ["src"]
}
